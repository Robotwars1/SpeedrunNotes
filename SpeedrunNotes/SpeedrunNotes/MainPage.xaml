<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SpeedrunNotes.MainPage"
             Loaded="OnMainPageLoaded"
             Appearing="OnMainPageAppearing">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="250" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- Split notes -->
        <Grid Grid.RowSpan="2" >
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <Label x:Name="SplitNoteLabel1"
                   Grid.Row="0"
                   Grid.Column="0" />

            <Label x:Name="SplitNoteLabel2"
                   Grid.Row="1"
                   Grid.Column="0" />

            <Image x:Name="SplitNoteImage1"
                   Grid.Row="0"
                   Grid.Column="1" />

            <Image x:Name="SplitNoteImage2"
                   Grid.Row="1"
                   Grid.Column="2" />
        </Grid>
        
        <!-- Next split -->
        <Grid Grid.Column="1">
            <Image x:Name="NextSplitImage"
                   Aspect="AspectFill" />

            <Label x:Name="NextSplitLabel"
                   VerticalOptions="Start"
                   HorizontalOptions="Start"
                   Text="Next Split:"
                   FontSize="20"
                   TextColor="White" />
        </Grid>
        
        <!-- Settings -->
        <StackLayout Grid.Column="1"
                     Grid.Row="1" 
                     Padding="20">
            <Button x:Name="ReconnectBtn"
                    Text="Reconnect"
                    WidthRequest="200"
                    Clicked="OnReconnectBtnClicked" />

            <Button x:Name="LoadPresetButton"
                    Text="Load Preset"
                    WidthRequest="200"
                    Clicked="OnLoadPresetBtnClicked" />

            <Button x:Name="OpenImageFolderBtn"
                    Text="Open Image Folder"
                    WidthRequest="200"
                    Clicked="OnOpenImageFolderBtnClicked" />

        </StackLayout>
    </Grid>
</ContentPage>
